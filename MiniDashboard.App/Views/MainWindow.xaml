<Window x:Class="MiniDashboard.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:MiniDashboard.App.ViewModels"
        xmlns:local="clr-namespace:MiniDashboard.App"
        mc:Ignorable="d"
        Title="Mini Dashboard" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Mini Dashboard" 
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Search and Actions -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" 
                     Width="200" Margin="0,0,10,0" Padding="5"
                     VerticalContentAlignment="Center"/>
            <Button Content="Search" Command="{Binding SearchCommand}" 
                    Padding="10,5" Margin="0,0,10,0"/>
            <Button Content="Refresh" Command="{Binding LoadItemsCommand}" 
                    Padding="10,5" Margin="0,0,10,0"/>
            <TextBlock Text="Sort:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <Button Content="By Name" Command="{Binding SortCommand}" CommandParameter="Name" 
                    Padding="10,5" Margin="0,0,5,0"/>
            <Button Content="By Created Date" Command="{Binding SortCommand}" CommandParameter="CreatedAt" 
                    Padding="10,5" Margin="0,0,5,0"/>
            <Button Content="By Updated Date" Command="{Binding SortCommand}" CommandParameter="UpdatedAt" 
                    Padding="10,5"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Items List -->
            <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" 
                    Margin="0,0,5,0" Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Items List" 
                               FontWeight="Bold" Padding="10" Background="LightGray"/>
                    
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding ItemsView}"
                              SelectedItem="{Binding SelectedItem}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                            <DataGridTextColumn Header="Created At" Binding="{Binding CreatedAt, StringFormat=yyyy-MM-dd HH:mm}" Width="150"/>
                            <DataGridTemplateColumn Header="Actions" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Delete" 
                                                Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Padding="5,2"
                                                Background="IndianRed" Foreground="White"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Details Panel -->
            <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="1" 
                    Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Item Details" 
                               FontWeight="Bold" Padding="10" Background="LightGray"/>
                    
                    <StackPanel Grid.Row="1" Margin="10">
                        <TextBlock Text="Name:" Margin="0,10,0,5" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding NameInput, UpdateSourceTrigger=PropertyChanged}" 
                                 IsEnabled="{Binding IsEditMode}"
                                 Padding="5" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Description:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding DescriptionInput, UpdateSourceTrigger=PropertyChanged}" 
                                 IsEnabled="{Binding IsEditMode}"
                                 TextWrapping="Wrap" AcceptsReturn="True" 
                                 MinHeight="100" Padding="5" Margin="0,0,0,10"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal" 
                                HorizontalAlignment="Right" Margin="10">
                        <Button Content="Add" Command="{Binding AddCommand}" 
                                Visibility="{Binding IsNotEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                                Padding="10,5" Margin="0,0,5,0" Background="MediumSeaGreen" Foreground="White"/>
                        <Button Content="Edit" Command="{Binding EditCommand}" 
                                Visibility="{Binding IsNotEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                                Padding="10,5" Margin="0,0,5,0" Background="DodgerBlue" Foreground="White"/>
                        <Button Content="Save" Command="{Binding SaveCommand}" 
                                Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                                Padding="10,5" Margin="0,0,5,0" Background="Green" Foreground="White"/>
                        <Button Content="Cancel" Command="{Binding CancelCommand}" 
                                Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                                Padding="10,5" Background="Gray" Foreground="White"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="{Binding ErrorMessage}" 
                       Foreground="Red" VerticalAlignment="Center"
                       Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <ProgressBar IsIndeterminate="True" Width="20" Height="20" 
                             Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                             Margin="0,0,5,0"/>
                <TextBlock Text="Loading..." 
                           Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

